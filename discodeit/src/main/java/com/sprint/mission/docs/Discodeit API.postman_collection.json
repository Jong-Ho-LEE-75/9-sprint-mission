              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{user1Name}}_수정됨\",\n  \"email\": \"{{user1Email}}\",\n  \"password\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{user1Id}}",
